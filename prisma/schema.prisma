generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id           String   @id @default(uuid())
  authProvider String
  authSubject  String   @unique
  email        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  prompts      Prompt[]
}

model Prompt {
  id        String   @id @default(uuid())
  ownerId   String
  owner     AppUser  @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  title     String
  body      String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}
